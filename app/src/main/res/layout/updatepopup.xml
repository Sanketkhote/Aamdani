<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:padding="5dp"
    android:layout_gravity="center"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/updatetextclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColorHint="#000"
        android:layout_gravity="end"

        android:background="@drawable/circlebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="#000"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#000"
            android:textSize="15dp"
            android:paddingLeft="6dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="what is the spend for"
            android:layout_margin="5dp"
            app:boxStrokeColor="#000"
            android:textColorHint="#000"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateexpnsenametext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:textColor="#000"

                app:errorEnabled="true"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Catagory"
            app:boxStrokeColor="#000"
            android:paddingLeft="6dp"
            android:layout_marginVertical="5dp"
            android:textColorHint="#000"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateexpensecatagorytext"
                android:layout_width="match_parent"
                android:textColorHint="#000"
                android:layout_height="wrap_content"
                android:textColor="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:id="@+id/catagoryChips">




        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
       <com.google.android.material.textview.MaterialTextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/expensedetail"
           style="?attr/materialButtonOutlinedStyle"
           />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:strokeColor="#000"
            android:layout_weight="1"
            android:text="Update"
            android:textColor="#000" />

    </LinearLayout>








</LinearLayout>